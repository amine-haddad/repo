{% extends "base.html.twig" %}
{% block body %}
	<h1>Program
		{{ id }}.</h1>

	<div class="media">
		<img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
		<div class="media-body">
			<h1 class="mt-0">{{ program.title }}</h1>
			<p>{{ program.summary }}</p>
			<p>Catégorie :
				{{ program.category.name }}</p>
			<p>season:</p>
			{% for season in seasons %}
				<a href="{{ path("program_season_show", { programId: program.id, seasonId: season.number }) }}" class="m-3">
					<h3>Saison :
						{{ season.number }}</h3>
				</a>
				<p>{{ season.year}}</p>
			{% endfor %}

		</div>
		Retour à la liste des programmes
	</a>
{% endblock %}
